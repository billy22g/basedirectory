<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @base.name %> Details</title>
  </head>

  <body>
    <article>
      <header>
        <h1><%= @base.name %> (<%= @base.branch %>)</h1>
      </header>
      <h3>Location:</h3>
      <p>
        <%= @base.city %>, <%= @base.state %><br/>
        <%= @base.lat %>, <%= @base.long %>
      </p>
      <%= image_for(@base) %><br/><br/>
    </article>
    <h3><%= link_to "Edit information for #{@base.name}", edit_base_path(@base) %></h3>
    <h3><%= link_to "Delete #{@base.name}", base_path(@base), method: :delete, 
          data: {confirm: "Are you sure you want to delete #{@base.name}"}, 
          class: "delete" %></h3>
    <article>
    <h2>Other bases</h2>
    <ul>
      <% @bases.each do |base| %>
        <li><%= link_to base.name, base_path(base) %></li>
      <% end %>
    </ul>
    <h2><%= link_to "Show All Bases", bases_path %></h2>
  </body>
</html>
