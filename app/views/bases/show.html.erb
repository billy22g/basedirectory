<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @base.name %> Details</title>
  </head>

  <body>
    <article>
      <header>
        <h1><%= @base.name %> (<%= @base.branch %>)</h1>
      </header>
      <h3>Location:</h3>
      <p>
        <%= @base.city %>, <%= @base.state %><br/>
        <%= @base.lat %>, <%= @base.long %>
      </p>
    </article>
    <article>
    <h2>Other bases</h2>
    <ul>
      <% @bases.each do |base| %>
        <li><%= link_to base.name, base_path(base) %></li>
      <% end %>
    </ul>
    <h2><%= link_to "Show All Bases", bases_path %></h2>
  </body>
</html>
